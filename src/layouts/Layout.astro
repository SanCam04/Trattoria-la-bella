---
import "../styles/global.css";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Trattoria La Bella</title>
    <!-- ✅ Google Fonts: Cinzel con pesos delgados -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@200;300;400&display=swap"
      rel="stylesheet"
    />

    <!-- Si ya tienes Dancing Script también -->
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body
    class="bg-[#fefcf5] text-gray-900 bg-no-repeat bg-right-top bg-[length:350px] opacity-[97%]"
  >
    <Navbar />
    <main class="p-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
